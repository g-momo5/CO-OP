{
  "name": "coop2",
  "version": "1.0.3",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "publish": "electron-builder --publish always"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Gas Station Management System",
  "repository": {
    "type": "git",
    "url": "https://github.com/g-momo5/CO-OP.git"
  },
  "build": {
    "appId": "com.coop2.gasstation",
    "productName": "CO-OP",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!test-*.js"
    ],
    "mac": {
      "category": "public.app-category.business",
      "icon": "assets/logo_cpc.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/logo_cpc.png",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "asarUnpack": [
        "node_modules/sqlite3/**/*"
      ]
    },
    "linux": {
      "icon": "assets/logo_cpc.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    },
    "publish": {
      "provider": "github",
      "owner": "g-momo5",
      "repo": "CO-OP"
    },
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "includePruneAsarElectronUnpacked": false
  },
  "devDependencies": {
    "@electron/remote": "^2.1.3",
    "electron": "^28.3.3",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "chart.js": "^4.5.0",
    "electron-updater": "^6.1.7",
    "file-saver": "^2.0.5",
    "jspdf": "^3.0.1",
    "pg": "^8.16.3",
    "sqlite3": "^5.1.7"
  }
}
